{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "./*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/components/*": [
        "src/components/*",
        "components/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/api/*": [
        "APP/API/*"
      ]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "APP/API/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
